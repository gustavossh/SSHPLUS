SCOLOR='\033[0m'

# - Verifica Execu√ß√£o Como Root
[[ "$EUID" -ne 0 ]] && {
    echo -e "{RED}[x] EXECUTAR COMO USUARIO ROOT !{SCOLOR}"
    sa√≠da 1
