# - Verifica Arquitetura Compat√≠vel
case "$(uname -m)" em
    'amd64' | 'x86_64')
        arch='64'
        ;;
    'aarch64' | 'armv8')
        arch='arm64'
        ;;
    *)
        echo -e "${RED}[x] ARQUITETURA INCOMPATIVA !${SCOLOR}"
        sa√≠da 1
        ;;
esac

# - Verifica OS Compat√≠vel
if grep -qs "ubuntu" /etc/os-release; ent√£o
	os_version=$(grep 'VERSION_ID' /etc/os-release | cut -d '"' -f 2 | tr -d '.')
    [[ "$os_version" -lt 1804 ]] && {
        echo -e "${RED}[x] VERSAO DO UBUNTU INCOMPATIVEL !\n${YELLOW}[!] REQUER UBUNTU 18.04 OU SUPERIOR !${SCOLOR}"
        sa√≠da 1
    }
